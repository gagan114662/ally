{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "frequency": {"type": "string"},
        "columns": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "required": ["name", "frequency", "columns"]
    },
    "exposures": {
      "type": "object",
      "properties": {
        "r2": {"type": "number"},
        "exposures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "factor": {"type": "string"},
              "beta": {"type": "number"},
              "tstat": {"type": "number"}
            },
            "required": ["factor", "beta", "tstat"]
          }
        },
        "method": {"type": "string"},
        "lags": {"type": "integer"}
      },
      "required": ["r2", "exposures", "method", "lags"]
    },
    "residual": {
      "type": "object",
      "properties": {
        "alpha_bps": {"type": "number"},
        "alpha_tstat": {"type": "number"},
        "r2": {"type": "number"},
        "window_days": {"type": "integer"},
        "residual_series_path": {"type": "string"}
      },
      "required": ["alpha_bps", "alpha_tstat", "r2", "window_days", "residual_series_path"]
    },
    "det_hash": {"type": "string"},
    "ts_utc": {"type": "string", "format": "date-time"}
  },
  "required": ["meta", "exposures", "residual", "det_hash", "ts_utc"]
}